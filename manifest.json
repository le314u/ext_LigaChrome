{
  "name": "LigaOrder",
  "description": "Ordena um deck de acordo com o pre√ßo e o formata para fazer a compra por lista",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ligamagic.com.br/?view=dks/*","https://www.ligamagic.com.br/?view=cards/lista*"],
      "js": ["backGround.js"]
    }
  ],
  "background": {
    "service_worker": "bg_page2cross.js"
  }
}